    <script>
        // Week Group Navigation
        function showWeekGroup(groupId) {
            document.querySelectorAll('.week-group').forEach(group => {
                group.classList.add('hidden');
            });
            document.getElementById(groupId).classList.remove('hidden');

            // Update active button style
            document.querySelectorAll('.weeks-nav-btn').forEach(btn => {
                btn.classList.remove('bg-amber-700', 'text-white', 'border-amber-700');
                btn.classList.add('bg-white', 'text-stone-700', 'border-stone-200');
            });
            event.target.classList.remove('bg-white', 'text-stone-700', 'border-stone-200');
            event.target.classList.add('bg-amber-700', 'text-white', 'border-amber-700');
        }

        // Smooth scroll
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    window.scrollTo({
                        top: target.offsetTop - 100,
                        behavior: 'smooth'
                    });
                }
            });
        });

        // Show first group by default
        document.querySelector('.weeks-nav-btn').classList.remove('bg-white', 'text-stone-700', 'border-stone-200');
        document.querySelector('.weeks-nav-btn').classList.add('bg-amber-700', 'text-white', 'border-amber-700');
